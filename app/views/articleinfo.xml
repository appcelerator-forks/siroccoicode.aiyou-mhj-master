<Alloy>
	<Window id="window" navBarHidden="true">
		<View id="back">
		<Require type="view" src="navbarinarticle"/>

		<ListView id="article">
			<Templates>
				<ItemTemplate name="mastercomment">
					<View id="mcback">
						<ImageView id="usericon" bindId="usericon"/>
						<View id="rightBack">
							<View id="mcFirstLine">
								<Label id="userName" bindId="userName"/>
								<Label id="replytime" bindId="replytime"/>
							</View>
							<Label id="mcLabel"/>
						</View>
					</View>
				</ItemTemplate>
				<ItemTemplate name="detailcomment">
					<View id="dcback">
						<Label id="dcLabel"/>
					</View>
				</ItemTemplate>
			</Templates>
			<HeaderView >
				<View id="headerBack">
					<View id="titleback">
						<Label id="articletitle" bindId="articletitle"/>
						<View id="headerbottomline">
							<Label id="articletype" bindId="articletype" class="bottomlabel"/>
							<Label id="author"  bindId="author" class="bottomlabel"/>
							<Label id="posttime" bindId="posttime" class="bottomlabel"/>
						</View>
					</View>
					<WebView id="articlecontent"/>
					<Label id="commentText"/>
				</View>
			</HeaderView>
				<FooterView>
				<View id="inputbar">
					<View id="inputArea">
						<TextArea id="comment"/>
						<Label id="inputHint"/>
					</View>
					<Button id="postcomment"/>
				</View>
			</FooterView>
			<ListSection>
				<ListItem title="test" temaplate=Titanium.UI.LIST_ITEM_TEMPLATE_DEFAULT/>
			</ListSection>
		</ListView>
		</View>		
	</Window>
</Alloy>